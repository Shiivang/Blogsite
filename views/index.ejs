<%- include("./parsial/header") %>

<div class=" w-full px-10  ">    
    
    <h2 class="text-4xl text-black text-center my-2">Daily Blogs</h2>


    <div class=" w-full min-h-[80vh] flex flex-col gap-5 items-center justify-between px-12 py-12 border-4 border-black rounded-tr-[5vmax] rounded-bl-[5vmax]  ">
        <% posts.forEach((blo)=>{ %>
            <a class="w-full" href="/readblogs/<%= blo._id %>">
            <div class="  w-full h-80 bg-neutral-300 rounded-3xl text-neutral-300 p-6 flex  items-start  gap-3   ">
        
                <img  class="w-90 h-full rounded-2xl bg-blue-500  " style="object-fit: cover ; object-position: center;" src="<%= blo.blogImage %>" alt="">
         
            <div class="">
                <p class="font-semibold text-black text-4xl"><%= blo.title.slice(0, 30)%> %></p>
                <p class=" text-black text-2xl my-5"><%= blo.desc.slice(0,300)%> %>... <span class="text-2xl text-blue-600" >more</span> </p>

            </div>
           
          </div> </a>
        <% }) %>

    </div>
</div>

<%- include("./parsial/footer") %>