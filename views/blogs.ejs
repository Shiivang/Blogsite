<%- include("./parsial/header") %>
<div class=" w-full p-10 flex flex-wrap justify-center items-center gap-5 ">
    <% posts.forEach((blo)=>{ %>
    <div class="  w-60 h-80 bg-neutral-800 rounded-3xl text-neutral-300 p-4 flex flex-col items-start justify-center gap-3 hover:bg-gray-900 hover:shadow-2xl hover:shadow-sky-400 transition-shadow">

        <img  class="w-52 h-40 rounded-2xl bg-blue-500  " style="object-fit: cover ; object-position: center;" src="<%= blo.blogImage %>" alt="">
 
    <div class="">
        <p class="font-extrabold"><%= blo.title%></p>
    </div>
    <button  class="bg-sky-700 font-extrabold p-2 px-6 rounded-xl hover:bg-sky-500 transition-colors"><a href="/readblogs/<%= blo._id %>">Blog</a></button>
  </div>
<% }) %>
</div>
<%- include("./parsial/footer") %>